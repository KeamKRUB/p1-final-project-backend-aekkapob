        }catch (AuthenticationException e){
            return ResponseEntity.status(HttpStatus.UNAUTHORIZED)
                    .body(new LoginResponse(false, "Invalid credentials", ""));
        }
        catch (Exception e){
            return ResponseEntity.badRequest().build();
