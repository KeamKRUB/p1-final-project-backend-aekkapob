package ku.cs.project_SE.factory.house_render_spec;

import ku.cs.project_SE.entity.house.Address;
import ku.cs.project_SE.entity.house.House;
import ku.cs.project_SE.entity.house.HouseRenovate;
import ku.cs.project_SE.entity.house.HouseRental;
import ku.cs.project_SE.model.filter.house_detail_renderer.*;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

public class HouseRenderSpecFactory {
    public HouseRenderSpecFactory() {

    }

    public RenderSpec getRenderSpec(House house) {
        List<PageRenderSpec> pages = new ArrayList<>();

        // Overview Page
        pages.add(createOverviewPage(house));

        // Details Page
        pages.add(createDetailsPage(house));

        // Financial Page (if rental)
        if (house.getRental() != null) {
            pages.add(createFinancialPage(house.getRental()));
        }

        // Renovation Page (if renovate)
        if (house.getRenovate() != null) {
            pages.add(createRenovationPage(house.getRenovate()));
        }

        // Location Page
        if (house.getAddress() != null) {
            pages.add(createLocationPage(house.getAddress()));
        }

        return new TabRenderSpec(pages.toArray(new PageRenderSpec[0]));
    }

    private PageRenderSpec createOverviewPage(House house) {
        List<RenderSpec> components = new ArrayList<>();

        // Header Section
        SectionRenderSpec headerSection = new SectionRenderSpec("",
            new RowRenderSpec(
                new ColumnRenderSpec(
                    new TitleRenderSpec(house.getHouseName()),
                    house.getCaption() != null ? new TextRenderSpec(house.getCaption()) : new TextRenderSpec("")
                ),
                new ColumnRenderSpec(
                    new PriceRenderSpec(house.getPrice()),
                    new BadgeRenderSpec(house.getHouseStatus() != null ? house.getHouseStatus().toString() : "UNKNOWN", "primary")
                )
            )
        );
        components.add(headerSection);
        components.add(new DividerRenderSpec());

        // Image Gallery
        if (house.getImages() != null && !house.getImages().isEmpty()) {
            List<ImageRenderSpec> imageSpecs = house.getImages().stream()
                .map(image -> new ImageRenderSpec(image.getImageId(), house.getHouseName()))
                .collect(Collectors.toList());

            components.add(new SectionRenderSpec("Gallery",
                new ImageGalleryRenderSpec(imageSpecs)
            ));
            components.add(new DividerRenderSpec());
        }

        // Key Facts Grid
        SectionRenderSpec keyFactsSection = new SectionRenderSpec("Key Facts",
            new CardRenderSpec(
                new GridRenderSpec(3,
                    new KeyValueRenderSpec("Bedrooms", house.getBedrooms()),
                    new KeyValueRenderSpec("Bathrooms", house.getBathrooms()),
                    new KeyValueRenderSpec("Square Footage", house.getSquareFootage() + " sq ft"),
                    new KeyValueRenderSpec("Year Built", house.getYearBuilt()),
                    new KeyValueRenderSpec("Garage Spaces", house.getGarageSpaces()),
                    new KeyValueRenderSpec("House Type", house.getHouseType() != null ? house.getHouseType() : "N/A")
                )
            )
        );
        components.add(keyFactsSection);
        components.add(new DividerRenderSpec());

        // Description
        if (house.getDescription() != null && !house.getDescription().isEmpty()) {
            components.add(new SectionRenderSpec("Description",
                new CardRenderSpec(
                    new TextRenderSpec(house.getDescription())
                )
            ));
        }

        return new PageRenderSpec(components);
    }

    private PageRenderSpec createDetailsPage(House house) {
        List<RenderSpec> components = new ArrayList<>();

        // Property Information
        components.add(new SectionRenderSpec("Property Information",
            new CardRenderSpec(
                new GridRenderSpec(2,
                    new KeyValueRenderSpec("Property Name", house.getHouseName()),
                    new KeyValueRenderSpec("Type", house.getHouseType() != null ? house.getHouseType() : "N/A"),
                    new KeyValueRenderSpec("Status", house.getHouseStatus() != null ? house.getHouseStatus().toString() : "UNKNOWN"),
                    new KeyValueRenderSpec("Price", house.getPrice() != null ? house.getPrice() + " THB" : "N/A")
                )
            )
        ));
        components.add(new DividerRenderSpec());

        // Physical Characteristics
        components.add(new SectionRenderSpec("Physical Characteristics",
            new CardRenderSpec(
                new GridRenderSpec(2,
                    new KeyValueRenderSpec("Bedrooms", house.getBedrooms()),
                    new KeyValueRenderSpec("Bathrooms", house.getBathrooms()),
                    new KeyValueRenderSpec("Square Footage", house.getSquareFootage() + " sq ft"),
                    new KeyValueRenderSpec("Year Built", house.getYearBuilt()),
                    new KeyValueRenderSpec("Garage Spaces", house.getGarageSpaces())
                )
            )
        ));
        components.add(new DividerRenderSpec());

        // Legal & Structure Information
        if (house.getLawInformation() != null || house.getStructure() != null) {
            List<RenderSpec> legalComponents = new ArrayList<>();

            if (house.getLawInformation() != null && !house.getLawInformation().isEmpty()) {
                legalComponents.add(new KeyValueRenderSpec("Legal Information", house.getLawInformation()));
            }

            if (house.getStructure() != null && !house.getStructure().isEmpty()) {
                legalComponents.add(new KeyValueRenderSpec("Structure", house.getStructure()));
            }

            components.add(new SectionRenderSpec("Legal & Structure",
                new CardRenderSpec(legalComponents)
            ));
            components.add(new DividerRenderSpec());
        }

        // Project Information
        if (house.getProject() != null || house.getProposedProjectname() != null) {
            List<RenderSpec> projectComponents = new ArrayList<>();

            if (house.getProject() != null) {
                projectComponents.add(new KeyValueRenderSpec("Project", house.getProject().getProjectName()));
            }

            if (house.getProposedProjectname() != null && !house.getProposedProjectname().isEmpty()) {
                projectComponents.add(new KeyValueRenderSpec("Proposed Project", house.getProposedProjectname()));
            }

            components.add(new SectionRenderSpec("Project Information",
                new CardRenderSpec(projectComponents)
            ));
        }

        return new PageRenderSpec(components);
    }

    private PageRenderSpec createFinancialPage(HouseRental rental) {
        List<RenderSpec> components = new ArrayList<>();

        components.add(new SectionRenderSpec("Financial Overview",
            new CardRenderSpec(
                new GridRenderSpec(2,
                    new KeyValueRenderSpec("Rental Yield", rental.getRentalYield() != null ? rental.getRentalYield() + " THB" : "N/A"),
                    new KeyValueRenderSpec("Property Tax", rental.getPropertyTax() != null ? rental.getPropertyTax() + " THB" : "N/A"),
                    new KeyValueRenderSpec("Maintenance Cost", rental.getMaintenanceCost() != null ? rental.getMaintenanceCost() + " THB" : "N/A")
                )
            )
        ));

        if (rental.getAdditionalData() != null && !rental.getAdditionalData().isEmpty()) {
            components.add(new DividerRenderSpec());
            components.add(new SectionRenderSpec("Additional Information",
                new CardRenderSpec(
                    new TextRenderSpec(rental.getAdditionalData())
                )
            ));
        }

        return new PageRenderSpec(components);
    }

    private PageRenderSpec createRenovationPage(HouseRenovate renovate) {
        List<RenderSpec> components = new ArrayList<>();

        components.add(new SectionRenderSpec("Renovation Overview",
            new CardRenderSpec(
                new KeyValueRenderSpec("Innovation Cost", renovate.getInnovateCost() != null ? renovate.getInnovateCost() + " THB" : "N/A")
            )
        ));

        if (renovate.getLawInformation() != null && !renovate.getLawInformation().isEmpty()) {
            components.add(new DividerRenderSpec());
            components.add(new SectionRenderSpec("Legal Information",
                new CardRenderSpec(
                    new TextRenderSpec(renovate.getLawInformation())
                )
            ));
        }

        if (renovate.getStructure() != null && !renovate.getStructure().isEmpty()) {
            components.add(new DividerRenderSpec());
            components.add(new SectionRenderSpec("Structure",
                new CardRenderSpec(
                    new TextRenderSpec(renovate.getStructure())
                )
            ));
        }

        if (renovate.getAdditionalData() != null && !renovate.getAdditionalData().isEmpty()) {
            components.add(new DividerRenderSpec());
            components.add(new SectionRenderSpec("Additional Information",
                new CardRenderSpec(
                    new TextRenderSpec(renovate.getAdditionalData())
                )
            ));
        }

        return new PageRenderSpec(components);
    }

    private PageRenderSpec createLocationPage(Address address) {
        List<RenderSpec> components = new ArrayList<>();

        // Address Details
        components.add(new SectionRenderSpec("Address",
            new CardRenderSpec(
                new ColumnRenderSpec(
                    new IconTextRenderSpec("home", address.getHouseAddress() != null ? address.getHouseAddress() : "N/A"),
                    new IconTextRenderSpec("location",
                        String.format("%s, %s, %s",
                            address.getArea() != null ? address.getArea() : "",
                            address.getSubstrict() != null ? address.getSubstrict() : "",
                            address.getProvince() != null ? address.getProvince() : ""
                        )
                    ),
                    new IconTextRenderSpec("mail", address.getPostalCode() != null ? address.getPostalCode() : "N/A")
                )
            )
        ));

        // Map
        if (address.getLat() != 0 && address.getLon() != 0) {
            components.add(new DividerRenderSpec());
            components.add(new SectionRenderSpec("Location Map",
                new MapRenderSpec(address.getLat(), address.getLon(), address.getHouseAddress())
            ));
        }

        return new PageRenderSpec(components);
    }
}
