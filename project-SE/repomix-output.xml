import ku.cs.project_SE.model.filter.specification.IntegerNumberRangeSpecification;
import org.springframework.data.jpa.domain.Specification;

public class AreaSizeFilter implements EntityFilter<House, IntegerNumberRangeDTO> {
    @Override
    public Specification<House> toSpecification(IntegerNumberRangeDTO specificationValue) {
        return ((root, query, criteriaBuilder) -> {
            int value = specificationValue.value();

            // If value is 0 or negative, return all
            if (value <= 0) {
                return criteriaBuilder.isTrue(criteriaBuilder.literal(true));
            }

            // Filter houses with squareFootage greater than or equal to the specified value
            return criteriaBuilder.greaterThanOrEqualTo(root.get("squareFootage"), (double) value);
        });
    }
}
