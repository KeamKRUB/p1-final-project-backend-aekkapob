public class HouseFilterFactory {
    public List<FilterSpecification> getHouseFilterSpecifications(){
        List<FilterSpecification> filterSpecifications = new ArrayList<>();
        filterSpecifications.add(new MultiSelectionFilterSpecification("พื้นที่", List.of("เกษตร","พหลโยธิน"), List.of("เกษตร")));
        filterSpecifications.add(new SingleSelectionFilterSpecification("ประเภทบ้าน", List.of("บ้านเดี่ยว","ทาวโฮม")));
        filterSpecifications.add(new DropdownFilterSpecification("ความใหม่", List.of("มือหนึ่ง","มือสอง")));
        filterSpecifications.add(new DropdownFilterSpecification("เรียงตาม", List.of("ใหม่สุดก่อน","เก่าสุดก่อน")));
        filterSpecifications.add(new DropdownFilterSpecification("ห้องนอน", List.of("ทั้งหมด", "1", "2", "3", "4", "5", "6+")));
        filterSpecifications.add(new IntegerNumberRangeSpecification("ขนาดพื้นที่", 0, 10000, 0, "พื้นที่ต่ำสุด", "พื้นที่สูงสุด", "ตร.ม."));
        return filterSpecifications;
    }

    public Specification<House> getFilterSpecification(String filterName, JSONObject filterData) {
        if (filterName.equals("พื้นที่")){
            AreaFilter areaFilter = new AreaFilter();
            MultiSelectionDTO dto = new MultiSelectionDTO();
            dto.fromJSON(filterData);
            areaFilter.toSpecification(dto);
            return areaFilter.toSpecification(dto);
        } else if (filterName.equals("ประเภทบ้าน")) {
            HouseTypeFilter houseTypeFilter = new HouseTypeFilter();
            SingleSelectionFilterDTO dto = new SingleSelectionFilterDTO();
            dto.fromJSON(filterData);
            return houseTypeFilter.toSpecification(dto);
        } else if (filterName.equals("ความใหม่")){
            OldNewFilter  oldNewFilter = new OldNewFilter();
            DropdownFilterDTO dto = new DropdownFilterDTO();
            dto.fromJSON(filterData);
            return oldNewFilter.toSpecification(dto);
        } else if (filterName.equals("ห้องนอน")){
            BedRoomFilter  bedRoomFilter = new BedRoomFilter();
            DropdownFilterDTO dto = new DropdownFilterDTO();
            dto.fromJSON(filterData);
            return bedRoomFilter.toSpecification(dto);
        } else if (filterName.equals("ขนาดพื้นที่")){
            AreaSizeFilter areaSizeFilter = new AreaSizeFilter();
            IntegerNumberRangeDTO dto = new IntegerNumberRangeDTO();
            dto.fromJSON(filterData);
            return areaSizeFilter.toSpecification(dto);
        }
        return null;
    }
}
