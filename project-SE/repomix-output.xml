    default RenovateDto toRenovateDto(HouseRenovate v) {
        if (v == null) return new RenovateDto(null, null, null,null);
        return new RenovateDto(
                v.getInnovateCost(),
                v.getStructure(),
                v.getLawInformation(),
                v.getAdditionalData()
        );
    }
