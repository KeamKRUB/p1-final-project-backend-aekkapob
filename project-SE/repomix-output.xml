            FilterSpecification filterSpecification,
            EntityFilter<T, D> entityFilter,
            Class<D> dtoClass
    ) {
        this.filterName = filterName;
        this.filterSpecification = filterSpecification;
        this.entityFilter = entityFilter;
        this.dtoClass = dtoClass;
    }

