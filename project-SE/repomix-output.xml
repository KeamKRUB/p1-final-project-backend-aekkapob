        double amt = (v instanceof Number n) ? n.doubleValue() : 0.0;
        return FixedAmountDiscountAction.builder()
                .promotion(promotion)
                .promotionId(promotion.getPromotionId())
                .discountAmount(amt)
                .build();
    }
