package ku.cs.project_SE.entity.promotion.promotion_condition.conditions;

import jakarta.persistence.*;
import ku.cs.project_SE.entity.house.House;
import ku.cs.project_SE.entity.promotion.Promotion;
import ku.cs.project_SE.entity.promotion.promotion_condition.ConditionListConverter;
import ku.cs.project_SE.entity.promotion.promotion_condition.ConditionSpec;
import ku.cs.project_SE.entity.promotion.promotion_condition.LogicalOperator;
import lombok.*;

import java.util.ArrayList;
import java.util.List;
import java.util.function.Function;

@Entity
@Table(name = "composite_conditions")
@Getter @Setter
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class CompositeCondition implements PromotionCondition {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @ManyToOne(fetch = FetchType.LAZY, optional = false)
    @JoinColumn(name = "promotion_id", nullable = false)
    private Promotion promotion;

    @Enumerated(EnumType.STRING)
    @Column(name = "operator", nullable = false, length = 8)
    private LogicalOperator operator;

    @Convert(converter = ConditionListConverter.class)
    @Column(name = "conditions_json", nullable = false, columnDefinition = "TEXT")
    @Builder.Default
    private List<ConditionSpec> conditions = new ArrayList<>();

    @Transient
    private Function<ConditionSpec, PromotionCondition> resolver;

    @Override
    public boolean evaluate(House house) {
        if (resolver == null) {
            throw new IllegalStateException("CompositeCondition resolver is not set");
        }

        return switch (operator) {
            case NOT -> {
                boolean child = conditions.stream().findFirst()
                        .map(resolver)
                        .map(c -> c.evaluate(house))
                        .orElse(false);
                yield !child;
            }
            case AND -> {
                for (ConditionSpec spec : conditions) {
                    if (!resolver.apply(spec).evaluate(house)) yield false;
                }
                yield true;
            }
            case OR -> {
                for (ConditionSpec spec : conditions) {
                    if (resolver.apply(spec).evaluate(house)) yield true;
                }
                yield false;
            }
        };
    }

    public void addConditionSpec(ConditionSpec spec) {
        if (conditions == null) conditions = new ArrayList<>();
        conditions.add(spec);
    }
}
