    private HouseRegisterRepository houseRegisterRepository;
    private UserService userService;
    private HouseService houseService;
    private UserMapper userMapper;
    private HouseMapper houseMapper;

    public HouseRegisterService(HouseRegisterRepository houseRegisterRepository, UserService userService, HouseService houseService,HouseMapper houseMapper, UserMapper userMapper) {
        this.houseRegisterRepository = houseRegisterRepository;
        this.userService = userService;
        this.houseService = houseService;
        this.houseMapper = houseMapper;
        this.userMapper = userMapper;

    }

    public HouseRegister createHouseRegister(long houseId, UUID userId) {
        HouseRegisterId registerId = new HouseRegisterId(userId, houseId);
        User user = userService.findById(userId);
        House house = houseService.findHouseById(houseId);
        HouseRegister houseRegister = HouseRegister.builder()
                .id(registerId)
                .user(user)
                .house(house)
                .build();

        return houseRegisterRepository.save(houseRegister);
    }

    public HouseRegister findHouseRegisterById(HouseRegisterId id) {
        return houseRegisterRepository.findById(id).orElse(null);
    }

    public List<HouseRegisterRespondDto> getAllHouseRegisterDto() {
        List<HouseRegister> houseRegisters = houseRegisterRepository.findAll();

        return houseRegisters.stream()
                .map(hr -> getHouseRegisterDtoById(hr.getUser().getUserId(), hr.getHouse().getHouseId()))
                .toList();
    }

    public HouseRegisterRespondDto getHouseRegisterDtoById(UUID userId,long houseId) {
        HouseRegisterId registerId = new HouseRegisterId(userId, houseId);
        HouseRegister houseRegister = this.findHouseRegisterById(registerId);
        User user = houseRegister.getUser();
        UserRespondDto userDTO = userMapper.toDto(user);
        HouseDetailDto houseDetailDto = houseMapper.toDetail(houseRegister.getHouse());
        return new HouseRegisterRespondDto(houseDetailDto,userDTO);
    }
