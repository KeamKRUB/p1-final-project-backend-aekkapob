package ku.cs.project_SE.entity.promotion.promotion_condition.builder;

import ku.cs.project_SE.entity.promotion.promotion_condition.ConditionSpec;
import ku.cs.project_SE.entity.promotion.promotion_condition.conditions.PromotionCondition;
import org.springframework.stereotype.Component;

@Component
public class DateRangeConditionBuilder implements ConditionBuilder {
    @Override public String type() { return "DATE_RANGE"; }

    @Override
    public PromotionCondition build(ConditionSpec spec) {
        var p = spec.getParams();
        String start = (String) p.get("startDate");
        String end   = (String) p.get("endDate");
        if (start == null || end == null) {
            throw new IllegalArgumentException("startDate/endDate required");
        }

        var cond = new ku.cs.project_SE.entity.promotion.promotion_condition.conditions.DateRangeCondition();
